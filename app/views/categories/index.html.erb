<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.descripcion %></td>
        <td><span class="glyphicon glyphicon-eye-open"><%= link_to 'Show', category %></span></td>
        <td><span class="glyphicon glyphicon-pencil"><%= link_to 'Edit', edit_category_path(category) %></span></td>
        <td><span class="glyphicon glyphicon-trash"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Esta seguro?' } %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

